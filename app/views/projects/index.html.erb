      <!-- Panel -->
      <div class="panel">
        <div class="panel-body">

          <form class="page-search-form" role="search">
            <div class="input-search input-search-dark">
              <i class="input-search-icon wb-search" aria-hidden="true"></i>
              <input type="text" class="form-control" id="inputSearch" name="search" placeholder="<%=('Search Projects')%>">
              <button type="button" class="input-search-close icon wb-close" aria-label="Close"></button>
            </div>
          </form>
          <div class="nav-tabs-horizontal">
            <div class="dropdown page-user-sortlist">
              <%=t('Order By')%>: <a class="dropdown-toggle inline-block" data-toggle="dropdown"
              href="#" aria-expanded="false"><%=t('Last Active')%><span class="caret"></span></a>
              <ul class="dropdown-menu animation-scale-up animation-top-right animation-duration-250"
              role="menu">
                <li class="active" role="presentation"><a href="javascript:void(0)"><%=t('Last Active')%></a></li>
                <li role="presentation"><a href="javascript:void(0)"><%=t('Groups')%></a></li>
                <li role="presentation"><a href="javascript:void(0)"><%=t('Register Date')%></a></li>
              </ul>
            </div>
            <ul class="nav nav-tabs nav-tabs-line" data-plugin="nav-tabs" role="tablist">
              <li class="active" role="presentation"><a data-toggle="tab" href="#trending" aria-controls="trending"
                role="tab"><%=t('Trending')%></a></li>
              <li role="presentation"><a data-toggle="tab" href="#most-favorites" aria-controls="most-favorites"
                role="tab"><%=t('Most favorites')%></a></li>
              <li role="presentation"><a data-toggle="tab" href="#all" aria-controls="all"
                role="tab"><%=t('All')%></a></li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane animation-fade active" id="trending" role="tabpanel">
                <ul class="list-group">

                <% @projects.each do |project| %>
                  <%= render 'project_list_item', :project => project %>
                <% end %>

                </ul>
              </div>

              <div class="tab-pane animation-fade" id="most-favorites" role="tabpanel">
                <ul class="list-group">
                <% if current_user %>
                  <% current_user.favorited_projects.each do |project| %>
                    <%= render 'project_list_item', :project => project %>
                  <% end %>
                <% end %>

                </ul>
              </div>

              <div class="tab-pane animation-fade" id="all" role="tabpanel">
                <ul class="list-group">
                <% @projects.each do |project| %>
                  <%= render 'project_list_item', :project => project %>
                <% end %>
                </ul>
              </div>
            </div>

          </div>
        </div>
      </div>
      <!-- End Panel -->



<% if current_user %>
    <button class="btn btn-floating btn-success" style="position:fixed; bottom:50px; right:20px; border-radius:50%;"
    data-target="#createProject" data-toggle="modal">
      <i class="icon wb-plus" aria-hidden="true"></i>
    </button>

<!-- POPUP -->

  <div class="modal fade" id="createProject" aria-hidden="false" aria-labelledby="createProject"
  role="dialog" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h4 class="modal-title" id="createProjectLabel"><%=t('Create new project')%></h4>
        </div>
        <div class="modal-body">
        <%= form_for(@myproject) do |f| %>
          <div class="row">
            <div class="col-lg-12 form-group">
              <%= f.text_field :name , :class => "form-control", placeholder: t('Name') %>
        </div>
        <div class="col-lg-12 form-group">
              <%= f.text_area :description, :class => "form-control", :rows => 4, placeholder: t('Description') %>
            </div>
            <div class="col-sm-12 pull-right">
              <%= check_box_tag 'openhub_check' %> <%=t('I want to get data from OpenHub')%>
              <br>
              <%= f.submit (!@myproject.persisted? ? t('Create project') : t('Edit project')) , :class => "btn btn-primary btn-outline" %>

            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


</div>
