

<div class="page-header text-center">
  <center>
    <%= image_tag "flosscoach-logo" %>
  </center>
  <h1 class="page-title ">  <%=t('Explore Flosscoach') %></h1>
  <p class="lead">
    <%=t('Discover projects, groups and technologies')%> <%=t('Share your projects with others')%>
  </p>
</div>
<!-- Panel -->
<div class="page-content">
  <div class="panel ">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @projects.count %> projects found</h3>
    </div>
    <div class="panel-body container-fluid">

      <div class="row row-lg">
        <div class="col-md-8">
          <form class="page-search-form" role="search">
            <div class="form-group">
              <div class="input-group">
                <input type="text" class="form-control" name="" placeholder="Search...">
                <span class="input-group-btn">
                  <button style="line-height:inherit;" type="submit" class="btn btn-primary waves-effect waves-classic"><i class="icon md-search" aria-hidden="true"></i></button>
                </span>
              </div>
              <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle btn-sm" id="searchFilter"
                data-toggle="dropdown" aria-expanded="false">
                Order by: Recents
              </button>
              <div class="dropdown-menu" aria-labelledby="searchFilter" role="menu">
                <%= link_to "Recents", recent_projects_path, class: "dropdown-item" %>
                <%= link_to "Most Favoritered", most_favorited_projects_path, class: "dropdown-item" %>
              </div>
            </div>
            </div>
          </form>


        <ul class="list-group list-group-bordered list-group-full">
          <%= render @projects %>

        </ul>

      </div>
      <div class="col-md-4">
        <div>
        <h4>Tags</h4>
        <div class="list-group list-group-bordered">
          <a class="list-group-item" href="javascript:void(0)">Dapibus ac facilisis in</a>
          <a class="list-group-item" href="javascript:void(0)">Morbi leo risus</a>
          <a class="list-group-item" href="javascript:void(0)">Vestibulum at eros</a>
        </div>
        <div>
          <% if current_user %>
          <div>
            <%= link_to "Create new project", new_project_path %>
          </div>
          <% end %>
      </div>
    </div>
  </div>

</div>


</div>
</div>

</div>
