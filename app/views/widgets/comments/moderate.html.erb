  <div class="page-content container-fluid">
      <div class="row">
          <h4 class="header">You're moderating comments for the Widget titled: <%= @widget.title %></h4>
      </div>
      <div class="row">
          <div class="col-md-6 moderation">
            <h5 class="title">You must moderate the comments below:</h5><hr> 
            <%= form_tag approve_comments_path, method: :put do %>
            <table frame="">
              <tr>
                  <th></th>
                  <th>Author</th>
                  <th>Comment</th>
                  <th>Status</th>
              </tr>

              <% @widget.comments.draft.each do |comment| %>
                <tr>
                  <td><%= check_box_tag "comment_ids[]", comment.id %></td>
                  <td><%= comment.user.name %> </td>
                  <td><%= comment.content %></td>
                  <td><%= comment.status%></td>
                </tr>
              <% end %>
            </table >
            
              <div class="submit">
                <%= submit_tag "Approved Comments", class:"btn btn-primary"%> 
              </div>
            <% end %>
          </div>
        </div>
        <div class="row">
        <div class="col-md-6 approved">
            <h5 class="title">All Approved Comments:</h5><hr>
            <table frame="">
              <tr>
                <th>ID</th>
                <th>Author</th>
                <th>Comment</th>
                <th>Status</th>

              </tr>
              <% @widget.comments.approved.each do |comment| %>
              <tr>
                <td><%= comment.id %></td>
                <td><%= comment.user.name %></td>
                <td><%= comment.content %></td>
                <td><%= comment.status%></td>
              </tr>
              <% end %>
            </table>
            <hr>
        </div>
        </div>
      <hr>
      <%=link_to 'Back to project', project_path(id: @widget.project.id), class:" back btn btn-primary"%>
      
  </div>
