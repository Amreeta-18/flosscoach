
    <input type='hidden' name='_method' value='put'>

    <div class="page-header page-header-bordered page-header-tabs">

    <figure class='logo-projeto'>
    <center>
      <div class='img-responsive center-block'>
        <a href="/projects/<%= @project.id %>/edit">
          <img src="<%= @project.image_url %>" width="700" height="500"/>
        </a>
      </div>
      </center>
    </figure>
    <% if check_favorite_project(current_user.id, @project.id) %>
      <%= button_to "Unfavorite", unfavorite_project_path(@project), {class: 'btn btn-primary btn-danger pull-right'}  %>
    <% else %>
      <%= button_to "Favorite", favorite_project_path(@project), {class: 'btn btn-primary btn-danger pull-right'}  %>
    <% end %>
    <% if is_favorited(@project.id) %>
      <%= button_to "Favorited: #{@project.favorite_projects.count} time".pluralize(@project.favorite_projects.count), {},  class: 'btn btn-primary btn-danger pull-right btn-primary-spacing'  %>
    <% end %>
    <h1  class="page-title" data-plugin="summernote" data-air-mode="true"><%= @project.name %></h1>
    <p class='description' data-plugin="summernote" data-air-mode="true"><%= @project.description %></p>

    <ul class="nav nav-tabs nav-tabs-line" data-plugin="nav-tabs" role="tablist" >
      <li class="active">
        <a data-toggle="tab" href="#about_aba"><%=t('About')%></a>
      </li>
      <li>
        <a data-toggle="tab"  href="#how-to-start"><%=t('How to start')%></a>
      </li>
      <li>
        <a data-toggle="tab" href="#config-workspace"><%=t('Configure workspace')%></a>
      </li>
      <li>
        <a data-toggle="tab" href="#know-code"><%=t('Know the code')%></a>
      </li>
      <li>
        <a data-toggle="tab" href="#send_contribution"><%=t('Send contribution')%></a>
      </li>
      <li>
        <%= link_to t('Owners'), project_users_path(@project) %>
      </li>
     </ul>

    </div>
    <div class="page-content container-fluid tab-content">
    <div class="grid-stack tab-pane animation-fade active" data-plugin="gridstack" data-gs-width="12"  id="about_aba" data-gs-animate="yes" role="tabpanel" >
    <!-- TAB ABOUT -->
    <% @project.widgets.from_tab_about.each do |widget| %>
      <div class="grid-stack-item" data-gs-x="<%= widget.pos_x %>" data-gs-y="<%= widget.pos_y %>" data-gs-width="<%= widget.width %>" data-gs-id="<%= widget.slug %>"  data-gs-height="<%= widget.height %>">

          <div class="grid-stack-item-content panel panel-bordered" >
            <div class="panel-heading">
              <h3 class="panel-title" ><%= t(widget.title) %></h3>
              <div class="panel-actions">

              <% if widget.retractable? %>
              <a class="panel-action icon wb-minus" data-toggle="panel-collapse" aria-expanded="true"
              aria-hidden="true"></a>
              <% end %>

              <% if widget.closeable? %>
              <a class="panel-action icon wb-close" data-toggle="panel-close" aria-hidden="true"></a>
              <% end %>

              </div>
            </div>
              <div id="<%= widget.slug %>" class="panel-body click2edit">
                <%= widget.content.html_safe %>
              </div>
          </div>
        </div>
    <% end %>
    </div>
