<ul class="list-group list-group-full">
  <% @project.pendent_ownership_requests.each  do |ownership_request| %>
  <% user = ownership_request.user %>

  <li class="list-group-item">
    <div class="media">
      <div class="pr-20">
        <div class="avatar avatar-online">
          <%= link_to user do %>
          <%= image_tag user.photo_url %>
          <% end %>
          <!-- <i class="avatar avatar-busy"></i> -->
        </div>
      </div>
      <div class="media-body">
        <h5 class="mt-0 mb-5">
          <%= link_to user.name, user %>
          <small>Owner</small>
        </h5>
        <p>
          <i class="icon icon-color md-pin-account" aria-hidden="true"></i>
          <%= link_to "@#{user.username}", user %>
        </p>

      </div>

      <div class="pl-20 align-self-center">
      <%= approve_ownership_request_button(ownership_request) %>
      <%= refuse_ownership_request_button(ownership_request) %>
      </div>
    </div>
  </li>


  <% end %>

</ul>
