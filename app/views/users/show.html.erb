 <div class="page animsition page-profile">

    <div class="page-content container-fluid">

      <div class="row">

        <div class="col-md-3">
          <!-- Page Widget -->
          <div class="widget widget-shadow text-center">
            <div class="widget-header">
              <div class="widget-header-content">
                <a class="avatar avatar-lg" href="javascript:void(0)">
                  <img src="<%= current_user.photo_url %>" />
                </a>
                <h4 class="profile-user editable">
                  <span class='name'><%= @user.name %></span>
                </h4>
                <small>Member since <b><%= @user.created_at %></b></small>
                <p class="editable" >
                <span class='description'> <%= @user.description %></span>
                </p>

                <div class="profile-social">
                  <%= link_to "", @user.twitter_link, :class => "icon bd-twitter"  unless @user.twitter_link %>
                  <% if @user.facebook_link %>
                  <%= link_to "", @user.facebook_link, :class => "icon bd-facebook"  unless @user.facebook_link %>
                  <% end %>
                  <%= link_to"", @user.github_link, :class => "icon bd-github"  unless @user.facebook_link %>

                </div>
              <!--  <button type="button" class="btn btn-primary">Follow</button> -->
              </div>
            </div>
            <div class="widget-footer">
              <div class="row no-space">
                <div class="col-xs-12">
                  <strong class="profile-stat-count"><%= @user.projects.size %></strong>
                  <span>Projects created</span>
                </div>

              </div>
            </div>
          </div>

          <!-- End Page Widget -->
        </div>
        <div class="col-md-9">
          <!-- Panel -->
          <div class="panel">
            <div class="panel-body nav-tabs-animate nav-tabs-horizontal">
              <ul class="nav nav-tabs nav-tabs-line" data-plugin="nav-tabs" role="tablist">
                <li class="active" role="presentation"><a data-toggle="tab" href="#recent-activities" aria-controls="recent-activities"
                  role="tab">Your recent activities</a></li>
                <li role="presentation"><a data-toggle="tab" href="#activities-your-projects" aria-controls="activities-your-projects" role="tab">Activities in your projects </a></li>
                <li role="presentation"><a data-toggle="tab" href="#your-projects" aria-controls="your-projects"
                  role="tab">Your projects </a></li>
                <li class="dropdown" role="presentation" style="display: none;">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                    <span class="caret"></span>Menu </a>
                  <ul class="dropdown-menu" role="menu">
                    <li role="presentation" style="display: none;"><a data-toggle="tab" href="#recent-activities" aria-controls="recent-activities"
                      role="tab">Recent activities <span class="badge label-danger">5</span></a></li>
                    <li role="presentation" style="display: none;"><a data-toggle="tab" href="#activities-your-projects" aria-controls="activities-your-projects"
                      role="tab">Activities in your projects</a></li>
                    <li role="presentation"><a data-toggle="tab" href="#your-projets" aria-controls="your-projects"
                      role="tab">Your projects</a></li>
                  </ul>
                </li>
              </ul>
              <div class="tab-content">
              <%= render 'recent_activities' %>
              <%= render 'activities_in_your_projects' %>


              <div class="tab-pane animation-slide-left" id="your-projects" role="tabpanel">
                  <ul class="list-group">
                  <% if @user.projects %>
                       <% @user.projects.each do |project| %>
                        <%= render 'projects/project_list_item', :project => project %>
                      <% end %>
                  <% else %>
                <h4>Você não tem projetos cadastrados.</h4>

                <% end %>

                  </ul>
                </div>
              </div>
            </div>
          </div>
          <!-- End Panel -->
        </div>
      </div>
    </div>
  </div>
  <% if @user == current_user %>
  <%= link_to edit_user_path(@user) do %>
  <button type="button" class="btn btn-floating btn-success" style="position:fixed; bottom:50px; right:20px; border-radius:50%;"><i class="icon wb-pencil" aria-hidden="true"></i></button>

  <% end %>
<% end %>
