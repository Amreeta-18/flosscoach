<div class="row">
	<div class="col-lg-9">	
		<% if @project.errors.any? %>
		  <div class="alert alert-error">
		    <a class="close" data-dismiss="alert">&#215;</a>
		    <ul> 
		      <% @project.errors.full_messages.each do |msg| %>
		        <%= content_tag :li, msg, :id => "error_#{msg}" if msg.is_a?(String) %>
		      <% end %>
		    </ul>
		  </div>
		<% end %>
	</div>
</div>