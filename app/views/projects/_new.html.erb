
<% if current_user %>
<button class="btn btn-floating btn-success" style="position:fixed; bottom:50px; right:20px; border-radius:50%;"
data-target="#createProject" data-toggle="modal">
<i class="icon wb-plus" aria-hidden="true"></i>
</button>

<!-- POPUP -->
<div class="modal fade" id="createProject" aria-hidden="false" aria-labelledby="createProject"
role="dialog" tabindex="-1">
<div class="modal-dialog">
<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
    <h4 class="modal-title" id="createProjectLabel"><%=t('Create new project')%></h4>
  </div>
  <div class="modal-body">
    <%= form_for(@project) do |f| %>
    <div class="row">
      <div class="col-lg-12 form-group">
        <%= f.text_field :name , :class => "form-control", placeholder: t('Name') %>
      </div>
      <div class="col-lg-12 form-group">
        <%= f.text_area :description, :class => "form-control", :rows => 4, placeholder: t('Description') %>
      </div>
      <div class="col-sm-12 pull-right">
        <%= check_box_tag 'openhub_check' %> <%=t('I want to get data from OpenHub')%>
        <br>
        <%= f.submit t('Create project') , :class => "btn btn-primary btn-outline" %>

      </div>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
<% end %>
